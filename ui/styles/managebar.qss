QWidget {
    border: 5px solid black;
    background-color: #1e1e1e;
}

QPushButton {
    color: #d41bd4;
    border: 1px solid #d41bd4;
    border-radius: 5px;
    font-family: Arial;
    font-weight: bold;
}

QPushButton:hover {
    color: white;
    background-color: #d41bd4;
}

QPushButton:pressed {
    border-style: inset;
    border-width: 1px;
    background-color: #d496e3;
}